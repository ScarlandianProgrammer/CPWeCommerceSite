@model Product

@{
    ViewData["Title"] = "Delete" + Model.Title;
}

<h1 class="text-light display-2">Delete @Model.Title</h1>

<h3 class="text-light">Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10 text-light">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10 text-light">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
